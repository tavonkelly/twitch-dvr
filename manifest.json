{
    "name": "Twitch DVR",
    "description": "Twitch DVR adds DVR style controls to Twitch streams",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": "img/icon128.png"
    },
    "icons": {
        "128": "img/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://*.twitch.tv/*"],
            "js": ["js/dvr.js"]
        }
    ],
    "web_accessible_resources": [
        "html/playerSeek.html"
    ]
}
